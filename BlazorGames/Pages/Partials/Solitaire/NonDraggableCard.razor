@using BlazorGames.Models.Solitaire;

@code {
    [Parameter]
    public Card Card { get; set; }
}

@if (Card != null)
{
    @if (Card.IsVisible)
    {
        <img class="solitaire-discards"
             src="images/common/@(Card.ImageName).png"
             ondragstart="return false"
             ondrop="return false" />
    }
    else
    {
        <img class="solitaire-discards"
             src="images/common/cardBack.png"
             ondragstart="return false"
             ondrop="return false" />
    }
}